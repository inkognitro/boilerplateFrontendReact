{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "Packages/*": ["./Packages/*"],
      "SinglePageWebApp/*": ["./SinglePageWebApp/*"]
    },
    "removeComments": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}