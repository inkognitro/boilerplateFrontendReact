{
  "name": "react-redux-saga-boilerplate",
  "version": "0.0.1",
  "description": "Frontend boilerplate realized in react combined with redux and redux-saga. Written in TypeScript. Built with webpack.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/inkognitro/react-redux-saga-boilerplate.git"
  },
  "scripts": {
    "start-spa": "webpack-dev-server --config src/SinglePageApp/Bootstrap/webpack.dev.js",
    "build-spa": "webpack --config src/SinglePageApp/Bootstrap/webpack.prod.js",
    "test": "jest",
    "check-types": "tsc"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-regenerator": "^7.8.7",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.7.2",
    "@hot-loader/react-dom": "^16.11.0",
    "@types/jest": "^25.2.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "fork-ts-checker-webpack-plugin": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.3.0",
    "node-sass": "^4.13.1",
    "react-hot-loader": "^4.12.20",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/uuid": "^3.4.6",
    "axios": "^0.19.0",
    "bootstrap": "^4.4.1",
    "core-js": "^3.6.1",
    "gsap": "^3.0.4",
    "history": "^4.10.1",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "uuid": "^3.4.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "Common/(.*)": "<rootDir>/src/Common/$1",
      "SinglePageApp/(.*)": "<rootDir>/src/SinglePageApp/$1"
    }
  }
}
