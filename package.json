{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "Frontend boilerplate realized in react combined with redux and redux-saga. Written in TypeScript.",
  "author": "Marcel Fischer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/inkognitro/react-redux-saga-boilerplate.git"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "src/Packages",
      "src/WebApp",
      "src/MobileApp"
    ],
    "nohoist": ["**/react-native", "**/react-native/**"]
  },
  "scripts": {
    "test": "lerna run test",
    "tsc": "lerna run tsc --stream",

    "OLDstart:webapp": "webpack-dev-server --config src/Apps/WebApp/Bootstrap/webpack.dev.js",
    "OLDbuild:webapp": "webpack --config src/Apps/WebApp/Bootstrap/webpack.prod.js",
    "OLDtest": "jest",
    "OLDtest:watch": "jest --watch",
    "OLDtest:lint": "eslint ./src --ext .ts,.tsx",
    "OLDtest:types": "tsc --noEmit",
    "OLDci": "npm run ci:lint && npm run ci:coverage && npm run ci:build",
    "OLDci:lint": "npm run test:types && eslint ./src --ext .ts,.tsx --quiet --fix",
    "OLDci:coverage": "jest --coverage --colors && make-coverage-badge --output-path \"./docs/readme/badgeTestCoverage.svg\" --report-path \"./docs/coverage/coverage-summary.json\"",
    "OLDci:build": "npm run build:webapp"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
